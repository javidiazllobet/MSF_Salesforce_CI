<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId,lightning:actionOverride" access="global" >
    <div aura:id="editDialog" role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <div class="slds-modal__header">
                <h2 class="slds-text-heading--medium">{!$Label.c.MSF_OPP_OVERRIDE_MESSAGE_TITLE}</h2>
            </div>
            <div class="slds-modal__content slds-p-around_medium" style="text-align:center">
                {!$Label.c.MSF_OPP_OVERRIDE_MESSAGE_BODY}
            </div>
            <div class="slds-modal__footer">                
                <lightning:button variant="brand" label="{!$Label.c.MSF_OPP_OVERRIDE_CLOSE_BUTTON}" onclick="{!c.closeButton}"/>
            </div>
        </div>
    </div>
    <div aura:id="overlay" class="slds-backdrop slds-backdrop--open"></div>
</aura:component>